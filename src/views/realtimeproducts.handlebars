<ul id="productList">
    {{#each products}}
    <li id="product-{{id}}">
        {{name}} - ${{price}}
        <button onclick="deleteProduct({{id}})">Eliminar</button>
    </li>
    {{/each}}
</ul>

<form id="productForm">
    <input type="text" id="name" placeholder="Nombre del producto" required>
    <input type="number" id="price" placeholder="Precio del producto" required>
    <input type="text" id="imageUrl" placeholder="URL de la imagen" required>
    <button type="submit">Agregar Producto</button>
</form>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/main.js"></script>